<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="signUpViewModel"
            type="com.drowsiness.ai.viewModel.viewmodels.SignUpViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/signup" />

        <RelativeLayout
            android:id="@+id/rl00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">


        </RelativeLayout>

        <TextView
            android:id="@+id/welcome3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl00"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/rl_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--
                @={signUpViewModel.inputEmail} = DATA BINDING with the View
                -->
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_background"
                    android:gravity="center"
                    android:hint="Email Address"
                    app:addTextChangedListener="@{signUpViewModel.emailWatcher}"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:text="@={signUpViewModel.inputEmail}"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/email" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_background"
                        android:gravity="center"
                        android:hint="Full Name"
                        android:inputType="text"
                        android:padding="12dp"
                        android:text="@={signUpViewModel.inputName}"
                        app:addTextChangedListener="@{signUpViewModel.nameWatcher}"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/logomale"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_background"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:drawableEnd="@drawable/eye"
                        android:padding="12dp"
                        android:text="@={signUpViewModel.inputPassword}"
                        app:addTextChangedListener="@{signUpViewModel.passwordWatcher}"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/password" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_background"
                        android:gravity="center"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:drawableEnd="@drawable/eye"
                        android:padding="12dp"
                        android:text="@={signUpViewModel.inputConfirmPassword}"
                        app:addTextChangedListener="@{signUpViewModel.confirmPasswordWatcher}"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/password" />


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/createaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_number"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/bg_edit_text"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="@{() -> signUpViewModel.onClick()}"
            android:text="Create Account"
            android:textColor="@color/purple_700"
            android:textSize="25sp"
            android:textStyle="bold"
            android:translationZ="10dp" />


        <TextView
            android:id="@+id/tvcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have a account?  Login "
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="620dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
    </RelativeLayout>

</layout>

