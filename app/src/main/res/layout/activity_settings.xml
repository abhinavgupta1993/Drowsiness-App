<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="settingsViewModel"
            type="com.example.viewModel.viewmodels.SettingsViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/alert"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@color/purple_200"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Menu"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="330dp"
                android:src="@drawable/baseline_view_stream_24"
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/r1"
                android:layout_below="@+id/rl00"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert Type"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="350dp"
                    android:src="@drawable/baseline_arrow_circle_down_24"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alert Sound"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <CheckBox
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="60dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="130dp"
                    android:text="Alert Volume"
                    android:layout_marginLeft="30dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="0dp"
                    android:background="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:text="Details"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="335dp"
                    android:text="Dashboard"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="380dp"
                    android:text="Settings"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="420dp"
                    android:text="Log out"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"/>



            </RelativeLayout>

        </RelativeLayout>

</layout>
