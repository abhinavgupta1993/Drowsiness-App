<?xml version="1.0" encoding="utf-8"?>
<!--View Binding-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

<!--     if activity reference == ViewBinding
else view model binding == Data binding-->
        <variable
            name="profileViewModel"
            type="com.drowsiness.ai.viewModel.viewmodels.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/rl00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_sketch" />

            <TextView
                android:id="@+id/welcome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfilePicture"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_below="@+id/rl00"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/previewProfilePicture"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_centerVertical="true"
                android:background="@color/purple_200"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/circular"
                app:srcCompat="@mipmap/ic_launcher"
                app:strokeColor="@color/white"
                app:strokeWidth="5dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectProfilePicture"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="8dp"
                android:background="@color/black"
                android:src="@android:drawable/ic_menu_camera"
                app:contentPadding="6dp"
                app:shapeAppearanceOverlay="@style/circular" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlProfilePicture"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivName"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/ivName"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--            android:background="@drawable/bg_edit_text_profile"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/tvName"
                android:gravity="center">


                <EditText
                    android:id="@+id/etName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text_profile_non_editable"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="start"
                    android:inputType="text"
                    android:maxLength="18"
                    android:padding="12dp"
                    android:text="Abhinav Gupta"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlName"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivEmail"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/ivEmail"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--            android:background="@drawable/bg_edit_text_profile"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/tvEmail"
                android:gravity="center">


                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="9sp"
                    android:background="@drawable/bg_edit_text_profile_non_editable"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="start"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:padding="12dp"
                    android:text="abhinav@clavrit.com"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:targetApi="o" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlEmail"
            android:layout_centerInParent="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/ivPhone"
                android:text="Phone"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--            android:background="@drawable/bg_edit_text_profile"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/tvPhone"
                android:gravity="center">


                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="phone"
                    android:background="@drawable/bg_edit_text_profile_non_editable"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="start"
                    android:inputType="phone|number"
                    android:maxLength="10"
                    android:padding="12dp"
                    android:hint="9690008019"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</layout>